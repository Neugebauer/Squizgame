<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.squidwrench.gameworks.squizgame"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk android:minSdkVersion="10" />
 	<uses-permission android:name="android.permission.INTERNET" />
    <application
        android:icon="@drawable/sgicon"
        android:label="@string/app_name" >
        <activity
            android:name="org.squidwrench.gameworks.squizgame.Splash"
            android:label="@string/app_name">
            <intent-filter >
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
                <activity
            android:name="org.squidwrench.gameworks.squizgame.SelectMode"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="org.squidwrench.gameworks.squizgame.SELECTMODE" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="org.squidwrench.gameworks.squizgame.SquizGame"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="org.squidwrench.gameworks.squizgame.SQUIZGAME" />
            </intent-filter>
        </activity>
    </application>
</manifest>
